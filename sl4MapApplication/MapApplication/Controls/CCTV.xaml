<UserControl x:Class="MapApplication.Controls.CCTV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
       Unloaded="UserControl_Unloaded" >
    
    <Grid x:Name="LayoutRoot" Background="White" Loaded="LayoutRoot_Loaded" >
        <Image Name="imgCCTV" Stretch="Fill"   />
        <TextBlock Margin="0,0,2,0" Name="textBlock1" Text="{Binding CCTV_INX}" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="60" Foreground="Yellow" TextAlignment="Right" />
        <TextBlock Foreground="Yellow" Height="19" HorizontalAlignment="Right" Margin="0,0,68,1" Name="textBlock2" Text="{Binding DESCRIPTION}" TextAlignment="Right" VerticalAlignment="Bottom" Width="77" />
    </Grid>
</UserControl>
